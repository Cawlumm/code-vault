{
  "manifest_version": 2,
  "name": "Code Vault",
  "description": "Save selected code or text snippets directly to your Code Vault backend.",
  "version": "1.0.0",

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Code Vault",
    "default_icon": {
      "16": "icons/frame.png",
      "48": "icons/frame.png",
      "128": "icons/frame.png"
    }
  },

  "icons": {
    "16": "icons/frame.png",
    "48": "icons/frame.png",
    "128": "icons/frame.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "tabs",
    "notifications",
    "http://*/*",
    "https://*/*"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "codevault-quick-save@example.com",
      "strict_min_version": "91.0"
    }
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",

  "web_accessible_resources": [
    "assets/*",
    "icons/*"
  ]
}
